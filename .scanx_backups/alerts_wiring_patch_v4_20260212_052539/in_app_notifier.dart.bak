import 'package:flutter/material.dart';
import 'package:flutter/services.dart';
import 'package:scanx_app/core/services/alert_rules_engine.dart';
import 'package:scanx_app/core/services/settings_service.dart';

class InAppNotifier {
  Future<void> notify(BuildContext context, List<AlertEvent> events, {required bool isAutoScan}) async {
    if (events.isEmpty) return;

    final s = SettingsService();

    // Filter events by user notification toggles (prevents placebo toggles).
    final filtered = events.where((e) => _shouldNotifyForEvent(e, s, isAutoScan)).toList();
    if (filtered.isEmpty) return;

    final silent = s.alertSilentMode;

    if (!silent) {
      if (s.alertSoundEnabled) {
        SystemSound.play(SystemSoundType.alert);
      }
      if (s.alertVibrationEnabled) {
        HapticFeedback.lightImpact();
      }
    }

    final top = _pickMostSevere(filtered);
    final extra = filtered.length - 1;
    final msg = extra > 0 ? '${top.title} (${extra} more)' : top.title;

    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(
        content: Text(msg),
        duration: const Duration(seconds: 4),
      ),
    );
  }

  bool _shouldNotifyForEvent(AlertEvent e, SettingsService s, bool isAutoScan) {
    switch (e.type) {
      case AlertType.scanCompleted:
        return isAutoScan ? s.notifyAutoScanResults : s.notifyScanCompleted;

      case AlertType.highRiskFindings:
        return s.notifyHighRisk;

      case AlertType.newDevice:
        return s.notifyNewDevice;

      case AlertType.macChanged:
        // MAC changes are a strong "untrusted/unknown" signal.
        return s.notifyUnknownDevice;

      case AlertType.arpSpoofing:
      case AlertType.portScanAttempts:
        return s.notifyHighRisk;

      case AlertType.routerVulnerability:
        return s.notifyRouterVuln;

      case AlertType.iotWarning:
        return s.notifyIotWarning;
    }
  }

  AlertEvent _pickMostSevere(List<AlertEvent> events) {
    int rank(AlertSeverity s) {
      switch (s) {
        case AlertSeverity.critical:
          return 5;
        case AlertSeverity.high:
          return 4;
        case AlertSeverity.medium:
          return 3;
        case AlertSeverity.low:
          return 2;
        case AlertSeverity.info:
          return 1;
      }
    }

    events.sort((a, b) => rank(b.severity).compareTo(rank(a.severity)));
    return events.first;
  }
}
